@model IEnumerable<Advertisement.Models.Order>

<table class="table">
    <thead>
        <tr>
            <th>ФИО</th>
            <th>Телефон</th>
            <th>Тип заказа</th>
            <th>Дата заказа</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.FullName</td>
                <td>@order.PhoneNumber</td>
                <td>@order.OrderType</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Status</td>
                <td>
                    <a href="@Url.Action("Edit", "Advertisement", new { id = order.Id })" class="btn btn-primary">Редактировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Advertisement")" class="btn btn-primary">Добавить заказ</a>