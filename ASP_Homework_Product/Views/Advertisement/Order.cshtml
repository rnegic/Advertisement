@model Advertisement.Models.Order

<form asp-action="Order" method="post">
    <input asp-for="Id" />
    <div class="form-group">
        <label for="FullName">ФИО</label>
        <input type="text" class="form-control" id="FullName" asp-for="FullName" required>
    </div>
    <div class="form-group">
        <label for="PhoneNumber">Телефон</label>
        <input type="text" class="form-control" id="PhoneNumber" asp-for="PhoneNumber" required>
    </div>
    <div class="form-group">
        <label for="OrderType">Тип заказа</label>
        <select class="form-control" id="OrderType" asp-for="OrderType" required>
            <option value="Печать">Печать</option>
            <option value="Стикеры">Наклейки</option>
            <option value="Вывеска">Вывеска</option>
        </select>
    </div>
    <div class="form-group">
        <label for="OrderDate">Дата заказа</label>
        <input type="date" class="form-control" id="OrderDate" asp-for="OrderDate" required>
    </div>
    <div class="form-group">
        <label for="Status">Статус</label>
        <select class="form-control" id="Status" asp-for="Status" required>
            <option value="Принят">Принят</option>
            <option value="В работе">В работе</option>
            <option value="Выполнен">Выполнен</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
</form>